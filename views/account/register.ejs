<form class="loginForm forms login-container" action="/account/register" method="post">
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
    <% } else { res.redirect('/') } %>
                    
        <%- messages() %>
            <% if (errors) { %>
               <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                        <%= error.msg %>
                        </li>
        <% }) %>
               </ul>
        <% } %>
        <div>
               <p>**ALL FIELDS ARE REQUIRED**</p>     
            <label for="firstName">First Name: </label>
                <input type="text" id="firstName" name="account_firstname" class="login-input" required
                value="<%= locals.account_firstname %>">
            </div>
            <div>
                <label for="lastName">Last Name: </label>
                <input type="text" id="lastName" name="account_lastname" class="login-input" required
                value="<%= locals.account_lastname %>">
            </div>
            <div>   
                <label for="email">Email: </label>
                <input type="email" id="email" name="account_email" class="login-input" required
                value="<%= locals.account_email %>">
            </div> 
            <div>
                <label for="password">Password:</label>
                <input type="password" id="password" name="account_password" class="login-input" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                <button class="register-btn" type="button" id="showPassBtn">Show Password</button>  
                <p>Password must include: </p>
                    <ul id="passReq">
                        <li>At least 12 characters</li>
                        <li>At least 1 uppercase letter</li>
                        <li>At least 1 number</li>
                        <li>At least 1 special character</li>
                    </ul>

                
            </div>
<div>
                <input class="login-button" type="submit" value="Register">
            </div>
</form>
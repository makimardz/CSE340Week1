<!-- Content Heading -->
    
    <form id="deleteAccountForm" class="login-container" action="/account/deleteAccount" method="post">
        <% if (title) { %>
            <h1>
                <%= title %>
            </h1>
            <% } else { res.redirect('/') } %>
            
            <%- messages() %>
            
            <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
            </ul>
            <% } %>

        <p>CONFIRMATION ACCOUNT DELETION - DELETE IS PERMANENT AND CANNOT BE UNDONE.</p>
    
        <label for="firstname">First Name:</label>
        <input type="text" id="firstname" name="account_firstname" class="login-input" value="<%= locals.account_firstname %>" readonly>
    
        <label for="lastname">Last Name:</label>
        <input type="text" id="lastname" name="account_lastname" class="login-input" value="<%= locals.account_lastname %>" readonly>
    
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" class="login-input" value="<%= locals.account_email %>" readonly>
    
        <input class="login-button" type="submit" value="Delete Account">
    
        <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>" <% } %>>
    </form>
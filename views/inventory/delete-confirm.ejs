<!-- Content Heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    
    <%- messages() %>
    
    <% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
        <li>
            <%= error.msg %>
        </li>
        <% }) %>
    </ul>
    <% } %>
    
    <form id="deleteForm" class="inventoryDeleteForm forms" action="/inv/delete" method="post">
        <p>CONFIRMATION DELETION - DELETE IS PERMANENT!</p>
    
        <label for="inv_make">Make: </label>
        <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>"
            placeholder="Min of 3 characters" minlength="3" readonly>
    
        <label for="inv_model">Model: </label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>"
            placeholder="Min of 3 characters" minlength="3" readonly>
    
        <label for="inv_price">Price: </label>
        <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" min="0" step="0.01"
            placeholder="decimal or integer" readonly>
    
        <label for="inv_year">Year: </label>
        <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>" min="1900" max="2024"
            placeholder="4-digit year" readonly>
    
        <input class="inventoryDelete-button form-button" type="submit" value="Delete Vehicle">
    
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    </form>
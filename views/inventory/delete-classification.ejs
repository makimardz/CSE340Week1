<!-- Content Heading -->
<% if (title) { %>
    
    
    <form id="deleteClassificationForm" class="login-container forms" action="/inv/delete-classification"
        method="post">

        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>
        
        <%- messages() %>
        
        <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
        </ul>
        <% } %>

        

        <p>DELETE IS PERMANENT!</p>
    
        <label for="classification_id">Classification: </label>
        <select id="classification_id" name="classification_id" class="login-input" required>
            <%- classificationSelect %>
        </select>
    
        <input class="login-button" type="submit" value="Delete Classification">
    
        <input type="hidden" name="inv_id" <% if(locals.classification_id) { %> value="<%= locals.classification_id %>"
            <% } %>>

            <p><a class="login-button" href="/inv">Back to Vehicle Management</a></p>
        </form>